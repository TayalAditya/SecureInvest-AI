# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/secureinvest-ai

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=30d

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379

# Client Configuration
CLIENT_URL=http://localhost:3000

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_password

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# External APIs
SEBI_API_KEY=your_sebi_api_key
SOCIAL_MEDIA_API_KEY=your_social_media_api_key

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./server/uploads

# Logging Configuration
LOG_LEVEL=info

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# AI/ML Configuration
AI_MODEL_PATH=./models
FRAUD_DETECTION_THRESHOLD=60

# Blockchain Configuration (for immutable records)
BLOCKCHAIN_NETWORK=ethereum
BLOCKCHAIN_PRIVATE_KEY=your_blockchain_private_key